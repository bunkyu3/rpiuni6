MEMORY{
	ramall(rwx)	: o = 0x000000, l = 0xffffff /* 16MB */
	stack(rw)	: o = 0x080000, l = 0x000000
	boot(rwx)	: o = 0x080000, l = 0x010000 /* 64KB */
	os(rwx)		: o = 0x090000, l = 0x080000 /* 512KB */
	buffer(rwx)	: o = 0xf00000, l = 0x0fffff /* 1MB */
}

SECTIONS{
	.text : {
		_text_start = . ;
		*(.text)
		_etext = . ;
	} > os 

	.rodata : {
		_rodata_start = . ;
		*(.strings)
		*(.rodata)
		*(.rodata.*)
		_erodata = . ;
	} > os 
	
	.data : {
		_data_start = . ;
		*(.data)
		_edata = . ;
	} > os 

	.bss : {
		_bss_start = . ;
		*(.bss)
		*(COMMON)
		_ebss = . ;
	} > os

	. = ALIGN(16);
	_end = . ;


}
